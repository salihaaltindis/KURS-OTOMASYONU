@using KURSOTOMASYON.Models

@model List<VW_TAKSIT_KAYIT_KURSIYER>
@{
    ViewBag.Title = "Index";
    int kayıtrefno = 0;

    int kalanborc = 0;

    if (ViewData["kalanborc"] != null)
    {
        kalanborc = Convert.ToInt32(ViewData["kalanborc"]) ;
    }

    if (ViewData["id"] != null)
    {
        kayıtrefno = Convert.ToInt32(ViewData["id"]);
    }
}

    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />


<div class="panel panel-default">
    <div id="title">KİŞİYE ÖZEL TAKSİT SAYFASI</div>
   
    <div class="panel panel-body">
        <hr />
        <div id="taksitodeme" class="row">

            <form action="/Taksitler/OdemeYap" method="post">
                <input type="text" name="tutar" placeholder="Tutar giriniz" />
                <input type="submit" value="OdemeYap" name="ODENEN" class="btn btn-success" />

                <label>KALAN BORÇ: </label>
                <input type="text" name="kalanborc" value="@kalanborc" readonly="true" />


                <input type="hidden" name="kayıtrefno" value="@kayıtrefno" />
                <span class="btn btn-dark">
                    <a href="/Kayitlar/Index">GERİ</a>
                </span>
            </form>
        </div>


        <div id="listeler" class="row table-responsive">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">TAKSİT REFNO</th>
                        <th scope="col">EĞİTİM GRUP ADI</th>
                        <th scope="col">ADI SOYADI</th>
                        <th scope="col">KAYIT DURUMU</th>
                        <th scope="col">TARİH</th>
                        <th scope="col">BORÇ</th>
                        <th scope="col">ÖDENEN</th>
                        <th scope="col">AÇIKLAMA</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @{
                            foreach (var k in Model)
                            {

                                var myModal = "myModal" + k.TAKSIT_REFNO;
                            <tr class="@(k.BORC == k.ODENEN ? "green" : k.BORC > k.ODENEN ? "white":"blue")">
                                <th>@k.TAKSIT_REFNO</th>
                                <th>@k.EGITIM_GRUP_ADI</th>
                                <th>@k.ADI_SOYADI</th>
                                <th>@k.KAYIT_DURUMU</th>
                                <th>@k.TARIH</th>
                                <th>@k.BORC</th>
                                <th>@k.ODENEN</th>
                                <th>@k.ACIKLAMA</th>

                                <th >
                                    
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@myModal"
                                            data-whatever="@k.TAKSIT_REFNO">
                                        <i class="glyphicon glyphicon-trash"></i>
                                        Sil
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="@myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-sm" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">İşlem Onay</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <h3>@k.ADI_SOYADI taksit bilgilerini silmek isteğinize emin misiniz?</h3>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    <a href="/Taksitler/Delete/@k.TAKSIT_REFNO" class="btn btn-danger" onclick="ConfirmDelete(@k.TAKSIT_REFNO)">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
