@using KURSOTOMASYON.Models

@model List<KURSIYER>
@{
    ViewBag.Title = "Index";
    string veri = ViewData["veri"].ToString();
}

<link href="~/Content/StyleSheet1.css" rel="stylesheet" />


<div class="panel panel-default">
    <div class="col-md-10" id="title">KURSİYER SAYFASI</div>
    <div class="col-md-2" id="title">
        <a class="btn btn-default" href="@Url.Action("ExportToExcel","Kursiyerler")"><i class="fas fa-file-excel"></i>Excel Al</a>
        <button class="btn btn-default"><i class="fas fa-file-pdf"></i> @Html.ActionLink("PDF Al", "PrintAll") </button>
    </div>
    <div class="panel panel-body">
        <hr />
        <div id="arama" class="row">
            <form action="/Kursiyerler/Search" method="post">
                <input type="text" name="txtARA" placeholder="Kursiyer TC No Giriniz" value="@veri" />
                <button type="submit" value="Ara" class="btn btn-secondary">Ara<span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                <span class="btn btn-secondary">
                    <a href="/Kursiyerler/Create"><i class="fas fa-user-plus"></i></a>
                </span>
            </form>
        </div>

        <div id="listeler" class="row table-responsive">
            <table class="table  table-hover">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">KURSİYER REFNO</th>
                        <th scope="col">ADI SOYADI</th>
                        <th scope="col">TC</th>
                        <th scope="col">TELEFON</th>
                        <th scope="col">EMAIL</th>
                        <th scope="col">ADRES</th>
                        <th scope="col">CİNSİYET</th>
                        <th scope="col">PAROLA</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @{
                            foreach (var k in Model)
                            {

                                var myModal = "myModal" + k.KURSIYER_REFNO;
                            <tr>
                                <th>@k.KURSIYER_REFNO</th>
                                <th>@k.ADI_SOYADI</th>
                                <th>@k.TC</th>
                                <th>@k.TELEFON</th>
                                <th>@k.EMAIL</th>
                                <th>@k.ADRES</th>
                                <th>@k.CINSIYET</th>
                                <th>@k.PAROLA</th>
                                <th>

                                    <a class="btn btn-success" href="/Kursiyerler/Create/@k.KURSIYER_REFNO"><i class="fas fa-user-edit"></i> Düzenle</a>
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@myModal"
                                            data-whatever="@k.KURSIYER_REFNO">
                                        <i class="glyphicon glyphicon-trash"></i>
                                        Sil
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="@myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-sm" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h3>@k.ADI_SOYADI kişisini silmek isteğinize emin misiniz?</h3>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                                    <a href="/Kursiyerler/Delete/@k.KURSIYER_REFNO" class="btn btn-danger" onclick="ConfirmDelete(@k.KURSIYER_REFNO)">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @Html.Partial("_Sayfalama")
    </div>


