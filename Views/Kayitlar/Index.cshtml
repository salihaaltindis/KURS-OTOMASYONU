@using KURSOTOMASYON.Models
@model List<VW_KAYIT_KURSIYER_EGITIMGRUP>


@{
    ViewBag.Title = "Index";
    string veri = ViewData["veri"].ToString();
}

<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
<div class="panel panel-default">
    <div class="col-md-10" id="title">KESİN KAYIT SAYFASI</div>
    <div class="col-md-2" id="title">
        <a class="btn btn-default" href="@Url.Action("ExportToExcel","Kayitlar")"><i class="fas fa-file-excel"></i>Excel Al</a>
        <button class="btn btn-default"><i class="fas fa-file-pdf"></i> @Html.ActionLink("PDF Al", "PrintAll") </button>
    </div>
    <div class="panel panel-body">
        <hr />
        <div id="arama" class="row">
            <form action="/Kayitlar/Search" method="post">
                <input type="text" name="txtARA" placeholder="Kişinin adı soyadını giriniz" value="@veri" />
                <button type="submit" value="Ara" class="btn btn-secondary">Ara<span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                <span class="btn btn-secondary">
                    <a href="/Kayitlar/Create"><i class="fas fa-user-plus"></i></a>
                </span>
            </form>
        </div>

        <div id="listeler" class="row table-responsive">
            <table class="table  table-hover">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">KAYIT REFNO</th>
                        <th scope="col">EĞİTİM GRUP ADI</th>
                        <th scope="col">ADI SOYADI</th>
                        <th scope="col">AÇIKLAMA</th>
                        <th scope="col">KAYIT DURUMU</th>
                        <th scope="col">KAYIT ÜCRETİ</th>
                        <th scope="col">TAKSİT SAYISI</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @{
                            foreach (var urun in Model)
                            {
                                var myModal = "myModal" + urun.KAYIT_REFNO;
                            <tr>

                                <th>@urun.KAYIT_REFNO </th>
                                <th>@urun.EGITIM_GRUP_ADI</th>
                                <th>@urun.ADI_SOYADI</th>
                                <th>@urun.ACIKLAMA</th>
                                <th>@urun.KAYIT_DURUMU</th>
                                <th>@urun.KAYIT_UCRETI</th>
                                <th>@urun.TAKSIT_SAYISI</th>
                                <th>
                                    <a class="btn btn-info" href="/Taksitler/Index/@urun.KAYIT_REFNO"><i class="fas fa-lira-sign"></i> Taksitler</a>

                                    <a class="btn btn-success" href="/Kayitlar/Edit/@urun.KAYIT_REFNO"><i class="fas fa-edit"></i> Düzenle</a>
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@myModal"
                                            data-whatever="@urun.KAYIT_REFNO">
                                        <i class="glyphicon glyphicon-trash"></i>
                                        Sil
                                    </button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="@myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog modal-sm" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h3>@urun.ADI_SOYADI kaydını silmek isteğinize emin misiniz?</h3>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                                    <a href="/Kayitlar/Delete/@urun.KAYIT_REFNO" class="btn btn-danger" onclick="ConfirmDelete(@urun.KAYIT_REFNO)">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @Html.Partial("_Sayfalama")
    </div>



