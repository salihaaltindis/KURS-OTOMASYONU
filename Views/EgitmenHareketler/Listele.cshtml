
@using KURSOTOMASYON.Models

@model List<VW_EGITMEN_HAREKET_EGITMEN>
@{
    ViewBag.Title = "Index";
    string veri = ViewData["veri"].ToString();

}

<link href="~/Content/StyleSheet1.css" rel="stylesheet" />


<div class="panel panel-default">
    <div class="col-md-10" id="title">EĞİTMEN HAREKET SAYFASI</div>
    <div class="col-md-2" id="title">
        <a class="btn btn-default" href="@Url.Action("ExportToExcel","EgitmenHareketler")"><i class="fas fa-file-excel"></i>Excel Al</a>
        <button class="btn btn-default"><i class="fas fa-file-pdf"></i> @Html.ActionLink("PDF Al", "PrintAll") </button>
    </div>
    <div class="panel panel-body">
        <hr />
        <div id="arama" class="row">
            <form action="/EgitmenHareketler/Search" method="post">
                <input style="padding:4px" type="text" name="txtARA" placeholder="Eğitmen adı giriniz" value="@veri" />
                <button type="submit" value="Ara" class="btn btn-secondary">Ara <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>


            </form>
        </div>


        <div id="listeler" class="row table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>

                        <th scope="col">EĞİTMEN HAREKET REFNO</th>
                        <th scope="col">EĞİTMEN ADI SOYADI</th>
                        <th scope="col">EĞİTMEN TC</th>
                        <th scope="col">DURUM</th>
                        <th scope="col">TARİH</th>
                        <th scope="col">ALACAK</th>
                        <th scope="col">ÖDENEN</th>
                        <th scope="col">AÇIKLAMA</th>



                    </tr>
                </thead>
                <tbody>
                    <tr>

                        @{
                            foreach (var k in Model)
                            {

                                var myModal = "myModal" + k.EGITMEN_HAREKET_REFNO;
                            <tr>
                                <th>@k.EGITMEN_HAREKET_REFNO</th>
                                <th>@k.ADI_SOYADI</th>
                                <th>@k.TC</th>
                                <th>@k.DURUM</th>
                                <th>@k.TARIH</th>
                                <th>@k.ALACAK</th>
                                <th>@k.ODENEN</th>
                                <th>@k.ACIKLAMA</th>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @Html.Partial("_Sayfalama")
    </div>